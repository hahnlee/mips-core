{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2018"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "build",
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "./src/",
    "paths": {
      "assembler/*": ["assembler/*"],
      "hardware/*": ["hardware/*"],
      "instruction/*": ["instruction/*"],
      "simulator/*": ["simulator/*"]
    }
  },
  "exclude": [
    "src/**/test/*.ts"
  ]
}